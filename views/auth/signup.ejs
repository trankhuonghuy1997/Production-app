<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/login.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <% if(errorMessage) {%>
            <div class="user-message user-message__error"><%= errorMessage %></div>
        <%}%>
        <main>        
            <form class="form-control" method="POST" action="/signup">
                <div class="form-control-item">
                    <label for="userName">Name</label>
                    <input type="text" id="userName" placeholder="User Name" name="name"></input>
                </div>
                <div class="form-control-item">
                    <label for="email">Your Email</label>
                    <input type="email" id="email" placeholder="Your Email" name="email"></input>
                </div>
                <div class="form-control-item">
                    <label for="password">Password</label>
                    <input type="password" id="password" placeholder="Password" name="password"></input>
                </div>
                <button type="submit">Sign Up</button>
            </form>           
        </main>
        <%- include('../includes/end.ejs') %>